{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vitest Current File",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${file}",
                "--no-threads",
                "--inspect-brk"
            ],
            "runtimeExecutable": "node", // dynamic: uses current nvm Node
            "autoAttachChildProcesses": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug All Vitest Tests",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "--no-threads",
                "--inspect-brk"
            ],
            "runtimeExecutable": "node",
            "autoAttachChildProcesses": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "smartStep": true
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch FastAPI (uvicorn)",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch backend/main.py",
            "program": "${workspaceFolder}/src/main.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}